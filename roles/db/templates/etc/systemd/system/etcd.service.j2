[Unit]
Description=etcd
Documentation=https://github.com/etcd-io/etcd
After=network.target

[Service]
User=etcd
Type=notify
Environment=ETCD_DATA_DIR=/var/lib/etcd
Environment=ETCD_NAME=etcd-{{ ansible_host }}
Environment=ETCD_INITIAL_ADVERTISE_PEER_URLS=http://{{ ansible_host }}:2380
Environment=ETCD_INITIAL_CLUSTER={% for host in groups['db']  %}etcd-{{ host }}=http://{{ host }}:2380{% if not loop.last %},{% endif %}{% endfor %}
ExecStart=/usr/local/bin/etcd
Restart=always
RestartSec=10s
LimitNOFILE=40000

[Install]
WantedBy=multi-user.target